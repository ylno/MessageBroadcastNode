root = true

[*]
end_of_line = lf
#trim_trailing_whitespace=true
indent_style=space
insert_final_newline=true
indent_size=4
block_comment_start=/*
block_comment_end=*/
max_line_length = 120

# Without indentation: .properties
[{*.dart,*.json,*.scss,*.yaml,*.yml,*.rules,*.m}]
indent_size=2

# Document explicit decision for 4 spaces
[{*.ts,*.js,*.vue,*.html,*.css,*.xml,*.gradl,*.entitlement,*.pug}]
indent_size=4
